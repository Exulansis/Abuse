{
  "version": "2.7.1",
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "removeComments": true,
      "lib": ["es2015", "es2017", "dom"],
      "noLib": false,
      "preserveConstEnums": true,
      "declaration": true,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "./js"
  },
  "filesGlob": [
      "./**/*.ts",
      "!./node_modules/**/*.ts"
  ]
}
